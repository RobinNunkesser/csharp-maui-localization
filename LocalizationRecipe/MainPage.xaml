<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationRecipe.Resources.Strings"
    x:Class="LocalizationRecipe.MainPage">

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand">
        <Label
            Text="{x:Static localization:AppResources.Greeting}" />
        <Label
            x:Name="OutputLabel" />
    </VerticalStackLayout>

</ContentPage>

